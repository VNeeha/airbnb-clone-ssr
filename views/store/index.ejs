<%- include('../partials/head') %>
</head>
<body class="bg-gray-50">
    <%- include('../partials/nav')%>

    <main class="container mx-auto p-6 mt-10">
        <!-- Hero Section -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to Airbnb</h1>
            <p class="text-xl text-gray-600">Discover amazing places to stay around the world</p>
        </div>

        <section class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
            <h2 class="text-3xl text-blue-600 font-bold text-center mb-8">Welcome to airbnb index page:</h2>

            <!-- Cards Grid (responsive) -->
            <div class="grid gap-8 justify-items-center grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
                <%registeredHomes.forEach((home)=>{%>
                <!-- Single Card -->
                <article class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 w-full max-w-sm border border-gray-100 transform hover:-translate-y-2">
                    <div class="relative">
                        <img src="<%=home.photo%>" alt="Home image" class="h-48 w-full object-cover" loading="lazy">
                        <div class="absolute top-3 right-3 bg-white bg-opacity-90 rounded-full px-2 py-1 flex items-center">
                            <svg class="w-4 h-4 text-yellow-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.539 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                            <span class="text-sm font-bold text-gray-800"><%=home.rating%></span>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold text-gray-800 mb-2"><%=home.houseName%></h3>
                        <div class="flex items-center text-gray-600 mb-3">
                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="font-medium"><%=home.location%></span>
                        </div>
                        <div class="flex items-center justify-between mb-4">
                            <span class="text-2xl text-blue-600 font-bold">Rs. <%=home.price%></span>
                            <span class="text-gray-500 text-sm">/ night</span>
                        </div>
                        <button class="w-full px-6 py-3 bg-green-600 text-white rounded-lg shadow-md hover:bg-green-700 transition-colors font-semibold flex items-center justify-center">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                            </svg>
                            Book
                        </button>
                    </div>
                </article>
                <%})%>
            </div>
        </section>
    </main>
    
</body>
</html>