<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-50">
      <%- include('../partials/nav') %>
      
      <!-- Hero Section with Property Image -->
      <div class="relative w-full h-64 md:h-80 overflow-hidden">
          <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-full object-cover">
          <div class="absolute inset-0 bg-black bg-opacity-30"></div>
          <div class="absolute bottom-6 left-6 text-white">
              <h1 class="text-3xl md:text-4xl font-bold mb-2"><%= home.houseName %></h1>
              <div class="flex items-center space-x-4 text-lg">
                  <div class="flex items-center">
                      <span class="text-yellow-400 text-xl mr-1">â˜…</span>
                      <span><%= home.rating %>/5</span>
                  </div>
                  <div class="flex items-center">
                      <svg class="w-5 h-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                      </svg>
                      <span><%= home.location %></span>
                  </div>
              </div>
          </div>
      </div>

      <!-- Property Details Card -->
      <div class="container mx-auto px-4 -mt-8 relative z-10 max-w-4xl">
          <div class="bg-white rounded-xl shadow-xl p-8">
              <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Property Details</h2>
              
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                  <!-- Left Column - Description -->
                  <div class="space-y-6">
                      <div>
                          <h3 class="text-2xl font-bold text-gray-800 mb-4">Description</h3>
                          <p class="text-gray-600 leading-relaxed"><%= home.description %></p>
                      </div>
                      
                      <div class="pt-4">
                          <a href="/store/rulesPdf/<%=home._id%>" class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors">
                              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
                              </svg>
                              Download House Rules
                          </a>
                      </div>
                      
                      <div class="pt-4">
                          <%-include('../partials/favourites',{home:home});%>
                      </div>
                  </div>
                  
                  <!-- Right Column - Pricing -->
                  <div class="space-y-6">
                      <div class="pt-4">
                          <h3 class="text-2xl font-bold text-gray-800 mb-4">Pricing</h3>
                          <div class="bg-gray-50 rounded-lg p-6">
                              <p class="text-3xl font-bold text-green-600">Rs. <%= home.price %> <span class="text-lg text-gray-600 font-normal">/ night</span></p>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </body>
</html>