<%- include('../partials/head') %>
</head>
<body class="bg-white ">
    <%- include('../partials/nav')%>

    <main class="container mx-auto p-6 mt-10">
        <section class="shadow-lg rounded-2xl bg-white p-8">
            <h2 class="text-3xl text-red-500 font-bold text-center mb-8">Here are your favourites:</h2>

            <!-- Cards Grid (responsive) -->
            <div class="grid gap-6 justify-items-center grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
                <%favouriteHomes.forEach((home)=>{%>
                <!-- Single Card (structure only; no EJS here) -->
                <article class="bg-white rounded-xl overflow-hidden shadow hover:shadow-xl transition-shadow w-full max-w-sm">
                    <img src="<%=home.photoUrl%>" alt="Home image" class="h-44 w-full object-cover" loading="lazy">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold text-gray-800 mt-1"><%=home.houseName%></h3>
                        <p class="text-lg mt-1 text-gray-500 font-semibold"><%=home.location%></p>
                        <div class=" flex items-center justify-between">
                            <span class="text-lg text-red-500 font-semibold mt-1">Rs.<%=home.price%> / night</span>
                            <span class="flex items-center text-yellow-500">
                                <!-- Star icon -->
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.539 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                                <span class="ml-1 text-gray-800 font-bold"><%=home.rating%></span>
                            </span>
                        </div>
                        <form action="/store/favourites/delete/<%=home._id%>" method="POST">
                            <input type="submit" value="Remove from favourites" class="px-4 py-1 bg-green-500 rounded-lg shadow-md mt-1">
                        </form>
                        
                    </div>
                </article>
                <%})%>
                <!-- Repeat/Render one card per home dynamically using your EJS loop -->
            </div>
        </section>
    </main>
    
</body>
</html>