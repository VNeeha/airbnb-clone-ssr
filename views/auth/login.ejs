<%-include('../partials/head')%>
</head>
<body class="bg-white ">
    <%-include('../partials/nav')%>
    <main class="container mx-auto mt-8 p-8 shadow-md rounded-lg ">
        <h1 class="text-gray-800 font-bold text-3xl mb-6 text-center"> Login with your info</h1>
        <form action="/auth/login" method="POST" class=" max-w-md mx-auto">
            <input type="text" name="userName"  placeholder="Enter Username/E-mail" class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2  ring-red-500 " required>
            <input type="password" name="password" placeholder="Enter your password" class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2  ring-red-500 " required>
            <input type="submit" value="Sign in" class="w-full bg-red-500 text-white  py-2 rounded-md hover:bg-red-600 transition duration-300">
        </form>
    </main>
</body>